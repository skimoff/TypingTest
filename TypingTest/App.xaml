<Application x:Class="TypingTest.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:TypingTest.MVVM.ViewModel"
             xmlns:view="clr-namespace:TypingTest.MVVM.View"
             xmlns:local="clr-namespace:TypingTest"
             xmlns:mainWindowVm="clr-namespace:TypingTest.MVVM.ViewModel.MainWindowVM"
             StartupUri="MainWindow.xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/DarkStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <DataTemplate DataType="{x:Type mainWindowVm:ProfileViewModel}">
                <view:ProfileView/>
            </DataTemplate>
             
            <DataTemplate DataType="{x:Type mainWindowVm:SettingViewModel}">
                <view:SettingView/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type mainWindowVm:TestViewModel}">
                <view:TestView/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type mainWindowVm:GuideViewModel}">
                <view:GuideView/>
            </DataTemplate>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
