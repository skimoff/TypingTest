<UserControl x:Class="TypingTest.MVVM.View.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TypingTest.MVVM.View"
             xmlns:viewModel="clr-namespace:TypingTest.MVVM.ViewModel"
             xmlns:authorizationVm="clr-namespace:TypingTest.MVVM.ViewModel.AuthorizationVM"
             mc:Ignorable="d"
             d:DesignHeight="470" 
             d:DesignWidth="400"
             d:DataContext="{d:DesignInstance Type=authorizationVm:RegistrationViewModel, IsDesignTimeCreatable=True}">
    <Grid>
        <StackPanel Margin="100 75 100 75">
                <TextBlock Text="Log in"
                           Margin="0 0 0 15"
                           Style="{StaticResource TextBlockStyle}"/>
                <TextBlock Text="Login"
                           Foreground="#F2F2F2"
                           FontSize="14"/>
                <TextBox Margin="0 5 0 0"
                         Background="Transparent"
                         Foreground="#F2F2F2"
                         BorderThickness="0 0 0 2"
                         VerticalAlignment="Center"
                         FontSize="14"/>
                
                <TextBlock Text="Password"
                           Margin="0 5 0 0"
                           Foreground="#F2F2F2"
                           FontSize="14"/>
                <PasswordBox x:Name="PasswordBox"
                         Margin="0 5 0 0"
                         Background="Transparent"
                         Foreground="#F2F2F2"
                         BorderThickness="0 0 0 2"
                         VerticalAlignment="Center"
                         FontSize="14"/>
                
                <!--Изменить дизайн кнопок-->
                <Button VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Height="30"
                        Width="150"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="1"
                        
                        Margin="0 30 0 0"
                        Content="Log in"/>
                <Button VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Height="30"
                        Width="150"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="1"
                        Command="{Binding NavigateToRegisterCommand}"
                        Margin="0 10 0 0"
                        Content="Back to registration"/>
            </StackPanel>
    </Grid>
</UserControl>
