<UserControl x:Class="TypingTest.MVVM.View.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TypingTest.MVVM.View"
             mc:Ignorable="d"
             xmlns:mainWindowVm="clr-namespace:TypingTest.MVVM.ViewModel.MainWindowVM"
             d:DataContext="{d:DesignInstance mainWindowVm:ProfileViewModel}"
             d:DesignHeight="600"
             d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Height="300"
                Margin="10"
                Style="{DynamicResource BorderForProfile}"
                VerticalAlignment="Top">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Image Margin="10"
                           Source="{Binding UserPhotoPath}"
                           Stretch="UniformToFill">
                    </Image>
                </Grid>

                <TextBlock Grid.Row="1"
                           Text="{Binding UserDisplayName}"
                           Style="{DynamicResource TextBlockForProfile}"
                           Margin="10 0 0 10"
                           FontSize="16"
                           FontWeight="Bold" />

            </Grid>
        </Border>

        <Border Grid.Column="1"
                Style="{DynamicResource BorderForProfile}"
                Height="300"
                Margin="10"
                
                VerticalAlignment="Top">

            <StackPanel Orientation="Vertical">

                <TextBlock Text="Найкраща статистика"
                           Style="{DynamicResource TextBlockForProfile}"
                           Margin="10 10 0 10"
                           FontSize="18"
                           FontWeight="Bold" />

                <TextBlock Text="{Binding BestWPM}"
                           Style="{DynamicResource TextBlockForProfile}"
                           Margin="10 5 0 0"
                           FontSize="16" />

                <TextBlock Text="{Binding BestAccuracy}"
                           Style="{DynamicResource TextBlockForProfile}"
                           Margin="10 5 0 0"
                           FontSize="16" />

                <TextBlock Text="{Binding TotalTests}"
                           Style="{DynamicResource TextBlockForProfile}"
                           Margin="10 5 0 0"
                           FontSize="16" />

            </StackPanel>
        </Border>
    </Grid>
</UserControl>