<UserControl x:Class="TypingTest.MVVM.View.TestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TypingTest.MVVM.View"
             xmlns:core="clr-namespace:TypingTest.Core"
             xmlns:vm="clr-namespace:TypingTest.MVVM.ViewModel"
             xmlns:mainWindowVm="clr-namespace:TypingTest.MVVM.ViewModel.MainWindowVM"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <core:InvertBooleanConverter x:Key="InvertBooleanConverter" />
    </UserControl.Resources>
    
    <UserControl.DataContext>
        <mainWindowVm:TestViewModel/>
    </UserControl.DataContext>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,30" HorizontalAlignment="Center">
            <TextBlock Style="{DynamicResource TextBlockForProfile}" Text="Час: " FontSize="18"/>
            <TextBlock Style="{DynamicResource TextBlockForProfile}" Text="{Binding TimeDisplay}" FontWeight="Bold" FontSize="18" Width="60"/>
            
            <TextBlock Style="{DynamicResource TextBlockForProfile}" Text=" | " FontSize="18" Margin="10,0"/>
            <TextBlock Style="{DynamicResource TextBlockForProfile}" Text="WPM: " FontSize="18"/>
            <TextBlock Style="{DynamicResource TextBlockForProfile}" Text="{Binding WPM, StringFormat={}{0:F0}}" FontWeight="Bold" FontSize="18" Width="50"/>
            
            <TextBlock Style="{DynamicResource TextBlockForProfile}" Text=" | " FontSize="18" Margin="10,0"/>
            <TextBlock Style="{DynamicResource TextBlockForProfile}" Text="Точність: " FontSize="18"/>
            <TextBlock Style="{DynamicResource TextBlockForProfile}" Text="{Binding Accuracy, StringFormat={}{0:F2}}" FontWeight="Bold" FontSize="18" Width="80"/>
        </StackPanel>

        <GroupBox Header="Тренажер" Grid.Row="1" Margin="0,0,0,20">
            <Grid VerticalAlignment="Center">
                <ItemsControl ItemsSource="{Binding CurrentWordChars}" HorizontalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="4,0">
                                <TextBlock Text="{Binding CharValue}" 
                                           FontSize="48" 
                                           FontWeight="Bold"
                                           Style="{DynamicResource TextBlockForProfile}"
                                           HorizontalAlignment="Center"
                                           FontFamily="Consolas"/>
                                <Border Height="5" Width="30" CornerRadius="2"
                                        Background="{Binding UnderlineColor}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBox x:Name="InputBox" 
                         Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}" 
                         Opacity="0" 
                         FontSize="48"
                         CaretBrush="Transparent"
                         BorderThickness="0"
                         VerticalAlignment="Stretch" 
                         HorizontalAlignment="Stretch"/>
            </Grid>
        </GroupBox>

        <Button Grid.Row="2" Command="{Binding StartTestCommand}" 
                Height="50" Width="220" HorizontalAlignment="Center">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#000232" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="FontSize" Value="16" />
                    <Setter Property="Content" Value="ОБНОВИТЬ ТЕКСТ" /> 
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsTestRunning}" Value="True">
                            <Setter Property="Content" Value="ЗАКОНЧИТЬ ТЕСТ" />
                            <Setter Property="Background" Value="#CC0000" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</UserControl>