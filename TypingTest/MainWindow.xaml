<Window x:Class="TypingTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:TypingTest.MVVM.View"
        xmlns:viewModel="clr-namespace:TypingTest.MVVM.ViewModel"
        xmlns:local="clr-namespace:TypingTest"
        xmlns:mainWindowVm="clr-namespace:TypingTest.MVVM.ViewModel.MainWindowVM"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen" 
        MouseDown="Window_MouseDown"
        Title="Typing test"
        Height="600"
        Width="1000"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.DataContext>
        <mainWindowVm:MainViewModel />
    </Window.DataContext>

    <Border Style="{StaticResource MainWindowBorderStyle}">
        <Grid ShowGridLines="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>


            <StackPanel Orientation="Vertical"
                        Grid.Column="0">
                <TextBlock Text="Typing test"
                           Style="{StaticResource TextBlockStyle}"
                           Margin="0 25 10 25" />

                <RadioButton Height="50"
                             Width="200"
                             Style="{StaticResource MainWindowRadioButton}"
                             Content="Profile"
                             IsChecked="True"
                             Command="{Binding ProfileViewCommand}" />
                <RadioButton Height="50"
                             Width="200"
                             Style="{StaticResource MainWindowRadioButton}"
                             Content="Test"

                             Command="{Binding TestViewCommand}" />
                <RadioButton Height="50"
                             Width="200"
                             Style="{StaticResource MainWindowRadioButton}"
                             Content="Guide"
                             
                             Command="{Binding GuideViewCommand}" />
                <RadioButton Height="50"
                             Width="200"
                             Style="{StaticResource MainWindowRadioButton}"
                             Content="Settings"
                             Command="{Binding SettingViewCommand}" />
                <Button Height="50"
                        Width="200"
                        Content="Quit"
                        Style="{StaticResource ButtonStyle}"
                        Click="Button_Quit_Click" />
            </StackPanel>
            <ContentControl Grid.Column="1"
                            Content="{Binding CurrentView}" />
        </Grid>
    </Border>
</Window>